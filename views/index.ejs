                    <% } else { %>
        			 <div class="col-lg-3 col-md-6 p0">
                        <div class="service_text">
                            <h4><%= urun.baslik %></h4>
                            <p><%= urun.text %></p>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 p0">
                        <div class="service_img">
                            <img class="img-fluid" src="img/service/service-4.jpg" alt="">
                        </div>
                    </div>
